{
    "manifest_version": 2,
    "name": "iFrame - Link Review",
    "description": "Preview any link and search any text in a popup iFrame",
    "version": "0.8",
    "background": {
        "scripts": [
            "script.js"
        ]
    },
    "web_accessible_resources": ["iFrame.css"],
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "permissions": [
        "storage", "webNavigation", "tabs", "http://*/*", "https://*/*"
    ],
    "options_page": "options.html",
    "browser_action": {
      "default_title": "iFrame options",
      "default_icon": "icon.png",
      "default_popup": "options.html"
    }
}